				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:components="components.*" backgroundAlpha="0" borderVisible="false">
	
	<s:Group id="backgroundGroup" width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:entries>
						<s:GradientEntry color="0" ratio="0.05" alpha="0"/>
						<s:GradientEntry color="#00AA00" ratio="0.5"/>
						<s:GradientEntry color="0" ratio="0.95" alpha="0"/>
					</s:entries>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
	</s:Group>
</s:BorderContainer>
